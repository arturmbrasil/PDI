<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.HistogramaModalController">
   <children>
      <BorderPane layoutY="-40.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <center>
            <VBox BorderPane.alignment="CENTER">
               <children>
                  <BarChart fx:id="hist1" prefHeight="300.0" prefWidth="550.0" title="Imagem 1">
                    <xAxis>
                      <CategoryAxis side="BOTTOM">
                           <padding>
                              <Insets bottom="20.0" />
                           </padding>
                        </CategoryAxis>
                    </xAxis>
                    <yAxis>
                      <NumberAxis side="LEFT" />
                    </yAxis>
                     <VBox.margin>
                        <Insets bottom="20.0" />
                     </VBox.margin>
                  </BarChart>
                  <BarChart fx:id="hist2" layoutX="10.0" layoutY="10.0" prefHeight="300.0" prefWidth="550.0" title="Imagem 2">
                     <xAxis>
                        <CategoryAxis side="BOTTOM" />
                     </xAxis>
                     <yAxis>
                        <NumberAxis side="LEFT" />
                     </yAxis>
                     <VBox.margin>
                        <Insets bottom="20.0" />
                     </VBox.margin>
                  </BarChart>
                  <BarChart fx:id="hist3" layoutX="10.0" layoutY="160.0" prefHeight="300.0" prefWidth="550.0" title="Imagem 3">
                     <xAxis>
                        <CategoryAxis side="BOTTOM" />
                     </xAxis>
                     <yAxis>
                        <NumberAxis side="LEFT" />
                     </yAxis>
                  </BarChart>
               </children>
            </VBox>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
